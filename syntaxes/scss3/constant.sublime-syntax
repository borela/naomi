          | space-arround
          | space-between
          | speech
          | solid
          | submit
          | sub
          | super
          | table-caption
          | table-cell
          | table-column(?:-group)?
          | table-footer-group
          | table-header-group
          | table-row(?:-group)?
          | table
          | text-bottom
          | text-top
          | top
          | transparent
          | true
          | tv
          | visible
          | uppercase
        )
      scope: >-
        support.scss.scss3
        entity.name.constant.scss.scss3
      pop: true

