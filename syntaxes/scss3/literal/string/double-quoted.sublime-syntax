hidden: true
scope: ...

variables:
  hexEscapedChar: |
    [a-f0-9]+

  doubleQuotedEscapeSequences: |
    \\
    (?> ["\\acd]
      | {{hexEscapedChar}}
    )

contexts:
  main:
    - match: \"
      scope: >-
        string.quoted.double.scss.scss3
        punctuation.definition.string.begin.scss.scss3
      with_prototype:
        - match: (?<!\\)\n
          set: trap
        - match: \"
          scope: >-
            string.quoted.double.scss.scss3
            punctuation.definition.string.end.scss.scss3
          pop: true
      set: escape-a

  trap:
    - meta_content_scope: context.trap

  escape-a:
    - meta_content_scope: string.quoted.double.scss.scss3
    - match: (?xi){{doubleQuotedEscapeSequences}}
      scope: constant.character.escape.a.scss.scss3
      set: escape-b

  escape-b:
    - meta_content_scope: string.quoted.double.scss.scss3
    - match: (?xi){{doubleQuotedEscapeSequences}}
      scope: constant.character.escape.b.scss.scss3
      set: escape-a
