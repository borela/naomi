          | false
          | fixed
          | flex-start
          | flex-end
          | flex
          | forwards
          | hidden
          | infinite
          | inline-block
          | inline-flex
          | inline-grid
          | inline-table
          | inline
          | inherit
          | initial
          | italic
          | landscape
          | left
          | list-item
          | middle
          | no-repeat
          | none
          | normal
          | nowrap
          | number
          | only
          | pointer
          | print
          | projection
          | radio
