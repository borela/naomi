contexts:
  main:
    - match: ""
      push: [ meta, entry ]

  entry:
    # - include: Packages/Naomi/syntaxes/html5/php.sublime-syntax
    - include: Packages/Naomi/syntaxes/html5/element.sublime-syntax
    - match: ""
      pop: true

  meta:
    - meta_scope: meta.naomi
    - match: ""
      pop: true
