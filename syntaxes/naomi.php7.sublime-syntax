  embedded:
    - meta_scope: >-
        embedded.php.php7
        source.php.php7
    - include: content

  embedded-short:
    - meta_scope: >-
        embedded.short.php.php7
        source.php.php7
    - include: content

  content:
    - match: \s*(\?>)
      captures:
        1: keyword.embedded.end.php.php7
      pop: true
    - match: ""
      with_prototype:
        - match: (?=\s*\?>)
          pop: true
      push:
        - include: Packages/Naomi/syntaxes/php7/statement-and-expression.sublime-syntax
