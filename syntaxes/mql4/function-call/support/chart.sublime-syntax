scope: ...

contexts:
  main:
    - match: |
        (?x)\s*\b
        ((?> Chart
            (?> ApplyTemplate
              | Close
              | First
              | Get(?>Double|Integer|String)
              | ID
              | Indicator(?>Delete|Name|sTotal)
              | Navigate
              | Next
              | Open
              | Period
              | PriceOnDropped
              | Redraw
              | SaveTemplate
              | ScreenShot
              | Set(?>Double|Integer|String|SymbolPeriod)
              | Symbol
              | Time(?>OnDropped|PriceToXY)
              | Window(?>Find|OnDropped)
              | XOnDropped
              | XYToTimePrice
              | YOnDropped
            )
          | Period
          | Symbol
          | Window
            (?> BarsPerChart
              | ExpertName
              | Find
              | FirstVisibleBar
              | Handle
              | IsVisible
              | OnDropped
              | Price(?:Max|Min|OnDropped)
              | Redraw
              | ScreenShot
              | sTotal
              | TimeOnDropped
              | (?>X|Y)OnDropped
            )
        ))(?=\s*\()
      captures:
        1: >-
          support.mql.mql4
          entity.name.function.mql.mql4
      set: arguments

  arguments:
    - include: Packages/Naomi/syntaxes/mql4/function-call/arguments.sublime-syntax
